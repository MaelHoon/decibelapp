<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_decibel_page_root"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <include
            android:id="@+id/layout_page_decibel_01"
            layout="@layout/page_decibel_01" />

        <include
            android:id="@+id/layout_page_decibel_02"
            layout="@layout/page_decibel_02"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_page_decibel_03"
            layout="@layout/page_decibel_03"
            android:visibility="gone" />

        <include
            android:id="@+id/layout_btn"
            layout="@layout/layout_page_button" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_police_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layer02"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_police_logo" />

        <TextView
            android:id="@+id/tv_police_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center|left"
            android:textColor="@color/textColor_default"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="영등포경찰서장" />
    </LinearLayout>
</LinearLayout>