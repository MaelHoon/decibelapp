<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor_default"
    android:orientation="vertical">

    <EditText
        android:imeOptions="flagNoExtractUi|actionDone"
        android:singleLine="true"
        android:id="@+id/edt_notice_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="30dp"
        android:layout_weight="1.8"
        android:background="@drawable/bg_notice_title"
        android:gravity="center"
        android:hint="내용을입력해주세요"
        android:textColor="@color/textColor_default"
        android:textSize="50sp"
        android:textStyle="bold" />`

    <EditText
        android:imeOptions="flagNoExtractUi|actionDone"
        android:background="@null"
        android:id="@+id/edt_notice_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        tools:text="내용을 입력해 주세요"
        android:hint="내용을 입력해 주세요"
        android:textColor="@color/background_default"
        android:textSize="60sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/layout_police_content"
        android:background="@color/textColor_default"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layer02"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_police_logo" />

        <TextView
            android:id="@+id/tv_police_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center|left"
            android:textColor="@color/background_default"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:text="영등포경찰서장" />
    </LinearLayout>
</LinearLayout>