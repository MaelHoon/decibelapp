<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_intro_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/img_decibel_intro_over_backgroud01"
            android:text="집회 소음 측정 중" />

        <LinearLayout
            android:id="@+id/layout_police_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/textColor_default"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/layer02"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/img_police_logo" />

            <TextView
                android:id="@+id/tv_police_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center|left"
                android:textColor="@color/background_default"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:text="영등포경찰서장" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/layout_btn"
        layout="@layout/layout_page_button" />
</FrameLayout>