<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_default"
    android:orientation="vertical">

    <TextView
        android:id="@+id/receive_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_receive_end_string_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="2023.04.27 11:17:16 Runtime 00:01:00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1.8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="3"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="현재 소음"
                android:textColor="@color/textColor_default"
                android:textSize="70sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7"
                    android:autoSizeMaxTextSize="50sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="&lt;소음기준&gt;"
                    android:textColor="@color/textColor_default"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/content_01"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="2.5"
                        android:autoSizeMaxTextSize="40sp"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center|right"
                        android:text="최고소음"
                        android:textColor="@color/textColor_default"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_stdMaxDecibel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="60sp"
                        android:autoSizeMinTextSize="25sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:textColor="@color/colorStatusText"
                        android:textStyle="bold"
                        tools:text="60" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="2"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center|left|bottom"
                        android:text="dBA"
                        android:textColor="@color/textColor_default"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_02"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.7"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="2.5"
                        android:autoSizeMaxTextSize="40sp"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center|right"
                        android:text="등가소음"
                        android:textColor="@color/textColor_default"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_stdThrDecibel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="60sp"
                        android:autoSizeMinTextSize="25sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:textColor="@color/colorStatusText"
                        android:textStyle="bold"
                        tools:text="60" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="2"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center|left|bottom"
                        android:text="dBA"
                        android:textColor="@color/textColor_default"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_currentDecibel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="50dp"
                android:layout_weight="4"
                android:autoSizeMaxTextSize="9000sp"
                android:autoSizeMinTextSize="200sp"
                android:autoSizeStepGranularity="3sp"
                android:autoSizeTextType="uniform"
                android:gravity="bottom|center|right"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/colorStatusText"
                android:textStyle="bold"
                tools:text="30.8" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="100dp"
                android:layout_weight="1"
                android:layout_marginBottom="30dp"
                android:autoSizeMaxTextSize="150sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:gravity="center|left|bottom"
                android:maxLines="1"
                android:text="dBA"
                android:textColor="@color/textColor_default"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>