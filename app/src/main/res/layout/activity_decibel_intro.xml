<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor_default">

    <ImageView
        android:id="@+id/iv_intro_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/img_decibel_intro_backgroud"
        android:text="집회 소음 측정 중" />


    <include
        android:id="@+id/layout_btn"
        layout="@layout/layout_page_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/layer02"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/img_police_logo" />

        <TextView
            android:id="@+id/tv_police_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center|left"
            android:textColor="@color/background_default"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:text="영등포경찰서장" />
    </LinearLayout>
</FrameLayout>